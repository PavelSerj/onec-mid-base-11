&НаКлиенте
Процедура РассчитатьСуммуСтроки(ТекущиеДанные)
	
   	//++04.03.2025 Сергеев П.С. - изменение расчета суммы с учетом скидки 
	//КоэффициентСкидки = 1 - ТекущиеДанные.Скидка / 100;
	//ТекущиеДанные.Сумма = ТекущиеДанные.Цена * ТекущиеДанные.Количество * КоэффициентСкидки;
	
	//Новый код
	Если ТекущиеДанные.Скидка + Объект.Расш_СогласованнаяСкидка < 100 Тогда
		КоэффициентТабличнойСкидки = ТекущиеДанные.Скидка / 100;
		КоэффициентСогласованнойСкидки = Объект.Расш_СогласованнаяСкидка / 100;
		КоэффициентСкидки = 1 - (КоэффициентТабличнойСкидки + КоэффициентСогласованнойСкидки);
		ТекущиеДанные.Сумма = ТекущиеДанные.Цена * ТекущиеДанные.Количество * КоэффициентСкидки;
	ИначеЕсли ТекущиеДанные.Скидка + Объект.Расш_СогласованнаяСкидка = 100 Тогда
		ТекущиеДанные.Сумма = 0;
		СообщениеПользователю = Новый СообщениеПользователю();
		СообщениеПользователю.Текст = "Суммарная скидка равна 100 процентам";
		СообщениеПользователю.Сообщить();		
	Иначе
		ТекущиеДанные.Сумма = 0;
		СообщениеПользователю = Новый СообщениеПользователю();
		СообщениеПользователю.Текст = "Суммарная скидка больше 100 процентов";
		СообщениеПользователю.Сообщить();
	КонецЕсли;
	//--04.03.2025 Сергеев П.С.

КонецПроцедуры

